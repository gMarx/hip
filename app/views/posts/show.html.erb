<div class="container text-center mt-7">

  <h2><%= @post.title %></h2>
  <div>
    <p><%= @post.body %></p>
  </div>

  <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-sm" %> |
  <%= link_to 'Back', posts_path, class: "btn btn-sm" %>

  <h3>Comments</h3>
  <%= render @post.comments %>
</div>